{
  "name": "storybook-components-lerna",
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "description": "Test monorepo with ts and lerna",
  "scripts": {
    "postinstall": "lerna link",
    "build-storybook": "build-storybook",
    "prebuild": "run-p tsc lint",
    "build": "lerna run --parallel 'build:es'",
    "build:old": "lerna exec --parallel 'BABEL_ENV=build babel src --root-mode upward --out-dir dist --source-maps --extensions .ts,.tsx --delete-dir-on-start --no-comments'",
    "postbuild": "yarn build:declarations",
    "commit": "git-cz",
    "fix": "run-p -c 'lint:* --fix'",
    "lint:css": "stylelint 'packages/**/*.ts{,x}'",
    "lint:ts": "eslint 'packages/**/*.ts{,x}'",
    "lint": "run-p -c lint:*",
    "prerelease": "yarn build",
    "release": "lerna publish --conventional-commits --skip-npm",
    "bootstrap": "lerna bootstrap",
    "clean": "lerna clean",
    "storybook": "start-storybook -p 6006",
    "build:docs": "build-storybook --docs",
    "test": "jest",
    "tsc": "tsc",
    "build:declarations": "lerna run --parallel 'build:declaration'"
  },
  "repository": {
    "type": "git",
    "url": "test"
  },
  "author": "Asad Hazara",
  "devDependencies": {
    "@babel/cli": "^7.7.0",
    "@babel/core": "^7.7.2",
    "@babel/preset-env": "^7.7.1",
    "@babel/preset-react": "^7.7.0",
    "@babel/preset-typescript": "^7.7.2",
    "@babel/runtime-corejs3": "^7.7.2",
    "@storybook/addon-a11y": "^5.2.6",
    "@storybook/addon-actions": "^5.2.6",
    "@storybook/addon-docs": "^5.2.6",
    "@storybook/addon-info": "^5.2.6",
    "@storybook/addon-knobs": "^5.2.6",
    "@storybook/addon-links": "^5.2.6",
    "@storybook/addons": "^5.2.6",
    "@storybook/react": "^5.2.6",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@types/enzyme": "^3.10.3",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/jest": "^24.0.23",
    "@types/react": "^16.9.11",
    "@types/storybook__react": "^4.0.2",
    "@types/styled-components": "^4.4.0",
    "@types/styled-system": "^5.1.3",
    "@types/vfile-message": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^2.7.0",
    "@typescript-eslint/parser": "^2.7.0",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.6",
    "babel-plugin-styled-components": "^1.10.6",
    "commitizen": "^4.0.3",
    "cz-lerna-changelog": "^2.0.2",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "jest": "^24.9.0",
    "lerna": "^3.18.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "react": "^16.12.0",
    "react-docgen-typescript-loader": "^3.4.0",
    "react-dom": "^16.12.0",
    "styled-components": "^4.4.1",
    "styled-system": "^5.1.2",
    "stylelint": "^11.1.1",
    "stylelint-config-airbnb": "^0.0.0",
    "stylelint-order": "^3.1.1",
    "stylelint-scss": "^3.12.1",
    "ts-jest": "^24.1.0",
    "typescript": "^3.7.2",
    "webpack": "^4.41.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  }
}
